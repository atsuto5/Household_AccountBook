<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:text="TEXT1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:layout_alignLeft="@+id/subTextView"
        android:layout_alignStart="@+id/subTextView" />

    <TextView
        android:id="@+id/subTextView"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:text="TEXT2"
        android:textColor="#1b4df1"
        android:paddingLeft="6dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textStart"
        android:layout_below="@+id/titleTextView" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/thumbNailView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toStartOf="@+id/titleTextView"
        android:layout_alignBottom="@+id/subTextView"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toLeftOf="@+id/titleTextView" />

    <ImageView
        android:id="@+id/userLikeView"
        android:src="@drawable/black_star"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/thumbNailView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

